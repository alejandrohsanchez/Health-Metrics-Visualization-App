<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PlaceholderFragment">

    <TextView
        android:id="@+id/wellness_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/wellness_profile"
        app:layout_constraintTop_toBottomOf="@+id/wellness_profile" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wellness_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_name_text"
        app:layout_constraintStart_toStartOf="@+id/wellness_name_text" />

    <TextView
        android:id="@+id/wellness_age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Age"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/wellness_name_text"
        app:layout_constraintTop_toBottomOf="@+id/wellness_name_text" />

    <TextView
        android:id="@+id/wellness_user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_age_text"
        app:layout_constraintStart_toStartOf="@+id/wellness_user_name" />

    <TextView
        android:id="@+id/wellness_weight_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Weight"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/wellness_profile2"
        app:layout_constraintTop_toBottomOf="@+id/wellness_profile2" />

    <TextView
        android:id="@+id/wellness_waterIntake_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Water"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/wellness_profile3"
        app:layout_constraintTop_toBottomOf="@+id/wellness_profile3" />

    <TextView
        android:id="@+id/wellness_calorie_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Calories"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/wellness_waterIntake_text"
        app:layout_constraintTop_toBottomOf="@+id/waterProgressBar" />

    <TextView
        android:id="@+id/wellness_user_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="num"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/waterProgressBar"
        app:layout_constraintStart_toEndOf="@+id/waterProgressBar"
        app:layout_constraintTop_toTopOf="@+id/waterProgressBar" />

    <TextView
        android:id="@+id/wellness_user_calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="num"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/calorieProgressBar"
        app:layout_constraintStart_toEndOf="@+id/calorieProgressBar"
        app:layout_constraintTop_toTopOf="@+id/calorieProgressBar" />

    <TextView
        android:id="@+id/wellness_user_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="num"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/workoutProgressBar"
        app:layout_constraintStart_toEndOf="@+id/workoutProgressBar"
        app:layout_constraintTop_toTopOf="@+id/workoutProgressBar" />

    <TextView
        android:id="@+id/wellness_height_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Height"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/wellness_weight_text"
        app:layout_constraintTop_toBottomOf="@+id/wellness_weight_text" />

    <TextView
        android:id="@+id/wellness_user_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weight"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_weight_text"
        app:layout_constraintStart_toStartOf="@+id/wellness_user_age"
        app:layout_constraintTop_toTopOf="@+id/wellness_weight_text" />

    <TextView
        android:id="@+id/wellness_weight_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="lbs"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_weight_text"
        app:layout_constraintStart_toEndOf="@+id/wellness_user_weight"
        app:layout_constraintTop_toTopOf="@+id/wellness_weight_text" />

    <TextView
        android:id="@+id/wellness_user_height_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="height1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_height_text"
        app:layout_constraintStart_toStartOf="@+id/wellness_user_weight"
        app:layout_constraintTop_toTopOf="@+id/wellness_height_text" />

    <TextView
        android:id="@+id/wellness_height_1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="ft"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_user_height_1"
        app:layout_constraintStart_toEndOf="@+id/wellness_user_height_1"
        app:layout_constraintTop_toTopOf="@+id/wellness_user_height_1" />

    <TextView
        android:id="@+id/wellness_user_height_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="height2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_height_text"
        app:layout_constraintStart_toEndOf="@+id/wellness_height_1_text"
        app:layout_constraintTop_toTopOf="@+id/wellness_height_text" />

    <TextView
        android:id="@+id/wellness_height_2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="in"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_user_height_2"
        app:layout_constraintStart_toEndOf="@+id/wellness_user_height_2"
        app:layout_constraintTop_toTopOf="@+id/wellness_user_height_2" />

    <TextView
        android:id="@+id/wellness_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Your Profile"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wellness_profile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Personal Info"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/wellness_age_text"
        app:layout_constraintTop_toBottomOf="@+id/wellness_age_text" />

    <TextView
        android:id="@+id/wellness_profile3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Daily Wellness"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/wellness_height_text"
        app:layout_constraintTop_toBottomOf="@+id/wellness_height_text" />

    <Button
        android:id="@+id/wellness_add_water_button"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A9BE57"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_subtract_water_button"
        app:layout_constraintStart_toEndOf="@+id/wellness_subtract_water_button"
        app:layout_constraintTop_toTopOf="@+id/wellness_subtract_water_button" />

    <Button
        android:id="@+id/wellness_subtract_water_button"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:backgroundTint="#A9BE57"
        android:text="-1"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_waterIntake_text"
        app:layout_constraintStart_toStartOf="@+id/wellness_user_edit_workout"
        app:layout_constraintTop_toTopOf="@+id/wellness_waterIntake_text" />

    <Button
        android:id="@+id/wellness_user_edit_calories_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A9BE57"
        android:text="Update Calories"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_user_edit_calories"
        app:layout_constraintStart_toEndOf="@+id/wellness_user_edit_calories"
        app:layout_constraintTop_toTopOf="@+id/wellness_user_edit_calories" />

    <Button
        android:id="@+id/wellness_user_edit_workout_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#A9BE57"
        android:text="Update Workout"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_user_edit_workout"
        app:layout_constraintStart_toEndOf="@+id/wellness_user_edit_workout"
        app:layout_constraintTop_toTopOf="@+id/wellness_user_edit_workout"
        app:layout_constraintVertical_bias="0.727" />

    <EditText
        android:id="@+id/wellness_user_edit_calories"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="New"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_calorie_text"
        app:layout_constraintStart_toStartOf="@+id/wellness_user_edit_workout"
        app:layout_constraintTop_toTopOf="@+id/wellness_calorie_text" />

    <EditText
        android:id="@+id/wellness_user_edit_workout"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="New"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/wellness_workout_text"
        app:layout_constraintStart_toEndOf="@+id/wellness_workout_text"
        app:layout_constraintTop_toTopOf="@+id/wellness_workout_text" />

    <TextView
        android:id="@+id/wellness_workout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Workout"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/wellness_calorie_text"
        app:layout_constraintTop_toBottomOf="@+id/calorieProgressBar" />

    <ProgressBar
        android:id="@+id/waterProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/wellness_waterIntake_text"
        app:layout_constraintTop_toBottomOf="@+id/wellness_waterIntake_text" />

    <ProgressBar
        android:id="@+id/workoutProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/wellness_workout_text"
        app:layout_constraintTop_toBottomOf="@+id/wellness_workout_text" />

    <ProgressBar
        android:id="@+id/calorieProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/wellness_calorie_text"
        app:layout_constraintTop_toBottomOf="@+id/wellness_calorie_text" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Can Do It!"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wellness_user_workout" />

</androidx.constraintlayout.widget.ConstraintLayout>